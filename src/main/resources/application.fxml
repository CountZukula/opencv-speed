<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <center>
        <ImageView fx:id="currentFrame" fitHeight="100" fitWidth="100" preserveRatio="true" />
    </center>
   <bottom>
      <HBox prefHeight="22.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
              <Button fx:id="button" alignment="center" onAction="#toggleCamera" text="Start Camera" />
              <Button fx:id="toggleGrey" alignment="center" onAction="#toggleGrey" text="Grey" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
