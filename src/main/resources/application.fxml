<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="276.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <center>
        <ImageView fx:id="currentFrame" fitHeight="100" fitWidth="100" preserveRatio="true"/>
    </center>
    <bottom>
        <HBox prefHeight="22.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="toggleCamera" alignment="center" onAction="#toggleCamera" text="Start Camera"/>
                <Button fx:id="toggleGrey" alignment="center" onAction="#toggleGrey" text="Grey"/>
                <ComboBox fx:id="displayMode" prefWidth="150.0"/>
                <Slider fx:id="thresholdSlider" prefHeight="27.0" prefWidth="140.0"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
