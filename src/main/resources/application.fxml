<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller">
    <bottom>
        <Button fx:id="button" alignment="center" onAction="#toggleCamera" text="Start Camera"/>
    </bottom>
    <center>
        <ImageView fx:id="currentFrame" fitHeight="100" fitWidth="100" preserveRatio="true"/>
    </center>
</BorderPane>
